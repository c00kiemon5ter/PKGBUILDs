# Maintainer: Ivan c00kiemon5ter Kanakarakis <ivan.kanak@gmail.com>
pkgname=shocco-git
pkgver=20110426
pkgrel=1
pkgdesc="literate-programming-style documentation generator written for and in POSIX shell"
arch=('any')
url="http://rtomayko.github.com/shocco/"
license=('MIT')
depends=('python-pygments')
makedepends=('git')
optdepends=('dash' 'ronn')
conflicts=('shocco')
provides=('shocco')

_gitroot="git://github.com/rtomayko/shocco.git"
_gitname="shocco"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d $_gitname ]] ; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "$srcdir/$_gitname"
  ./configure --prefix=/usr --bindir="$pkgdir/usr/bin"
  make
}

package() {
  cd "$srcdir/$_gitname"
  make PREFIX=/usr DESTDIR="$pkgdir" install
}

# vim: ft=sh syn=sh et
