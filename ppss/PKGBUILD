# Maintainer: Ivan c00kiemon5ter Kanakarakis <ivan.kanak@gmail.com>
# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
pkgname="ppss"
pkgver=2.85
pkgrel=2
pkgdesc="(Distributed) Parallel Processing Shell Script"
arch=('any')
url="http://code.google.com/p/ppss/"
license=('asis')
depends=('bash')
makedepends=('ncurses')
source=("http://ppss.googlecode.com/files/${pkgname}-${pkgver}.tgz")
sha1sums=('3b21f873fe38a36df9d4214b191c6944ed244462')

build() {
  # this can change with each new version
  sed -n '5,20p' ${srcdir}/${pkgname} > ${srcdir}/COPYING
}

package() {
  install -D -m755 ${srcdir}/${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -D -m644 ${srcdir}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

# vim:set ts=2 sw=2 et:
